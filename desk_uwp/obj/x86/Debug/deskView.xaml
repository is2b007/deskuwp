<Page
    x:Class="desk_uwp.DeskView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:desk_uwp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton x:ConnectionId='1' x:Name="SaveStroke" Label="Add Document" Icon="Document"                         />
            <AppBarButton Icon="AddFriend" Label="appbarbutton"/>
        </CommandBar>
    </Page.BottomAppBar>

    <RelativePanel BorderBrush="Black" BorderThickness="10">
        <Image Source="Assets/background.jpg" Stretch="UniformToFill" />
        <Image x:ConnectionId='2' x:Name="ImageBox" Margin="39.6,83.6,344.6,78.6" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True"/>
        <Viewbox x:ConnectionId='3' x:Name="ViewInk" HorizontalAlignment="Center" Stretch="Fill">
            <InkCanvas x:ConnectionId='7' x:Name="InkCanvas" Width="1000" Height="1000"                                                      />
        </Viewbox>
        <Grid HorizontalAlignment="Center" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="65*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <RelativePanel>
                <TextBlock x:ConnectionId='5' x:Name="Header" 
            		Text="DeskX Session" 
            		VerticalAlignment="Center"
            		Style="{ThemeResource HeaderTextBlockStyle}" 
            		Margin="-100,10,-100,-5" RelativePanel.AlignVerticalCenterWithPanel="True" FontWeight="Normal" HorizontalAlignment="Right" Width="291" RelativePanel.AlignHorizontalCenterWithPanel="True" />
                <TextBlock Text="Pen:"
            		Style="{StaticResource SubheaderTextBlockStyle}"
            		VerticalAlignment="Center"
            		Margin="559,17,86.333,6.333" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignRightWithPanel="True" Height="38"/>
                <ComboBox x:ConnectionId='6' x:Name="PenColor"
            		VerticalAlignment="Bottom"
            		SelectedIndex="0"
            		HorizontalAlignment="Right"
            		                                     Margin="-76.333,0,-2.667,-55" Height="38" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignRightWithPanel="True">
                    <ComboBoxItem Content="Black"/>
                    <ComboBoxItem Content="Red"/>
                    <ComboBoxItem Content="Blue"/>
                    <ComboBoxItem Content="Green"/>
                    <ComboBoxItem Content="Yellow"/>
                </ComboBox>
            </RelativePanel>

        </Grid>
        <TextBlock x:ConnectionId='4' x:Name="textBlock" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="63" Margin="840.6,555.6,-841.2,-555.6"/>
    </RelativePanel>
</Page>

