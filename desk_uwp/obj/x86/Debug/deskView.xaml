<Page
    x:Class="desk_uwp.DeskView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:desk_uwp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton x:ConnectionId='1' x:Name="SaveStroke" Label="Add Document" Icon="Document"                         />
            <AppBarButton Icon="AddFriend" Label="appbarbutton"/>
        </CommandBar>
    </Page.BottomAppBar>

    <RelativePanel BorderBrush="Black" BorderThickness="10">
        <Image Source="Assets/background.jpg" Stretch="UniformToFill" />
        <Image x:ConnectionId='2' x:Name="ImageBox" Margin="40,104,344,58" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True"/>
        <Viewbox x:ConnectionId='3' x:Name="ViewInk" HorizontalAlignment="Center" Stretch="Fill">
            <InkCanvas x:ConnectionId='10' x:Name="InkCanvas" Width="1000" Height="1000"                                                      />
        </Viewbox>
        <Grid Margin="-252.6,-1.4,-0.4,-0.4" BorderBrush="Black" BorderThickness="2" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignBottomWithPanel="True">
            <RelativePanel>
                <ListBox x:ConnectionId='7' x:Name="ChatBox" HorizontalAlignment="Right" Width="248" Foreground="Black" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" Margin="0,0,0,36" BorderBrush="Black" Background="#B2F2F2F2"                         SelectionMode="Multiple">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
                <TextBox x:ConnectionId='8' x:Name="ChatField" HorizontalAlignment="Left" Margin="0,-36,0,-1" TextWrapping="Wrap" BorderBrush="MediumPurple" VerticalAlignment="Top" Width="198" Height="37" RelativePanel.Below="ChatBox" RelativePanel.AlignBottomWithPanel="True"                            />
                <Button x:ConnectionId='9' x:Name="SendButton" Margin="178.4,540,0,-1" BorderBrush="MediumPurple" VerticalAlignment="Top" Width="50" Height="37" FontFamily="Segoe MDL2 Assets" Background="#B2000000" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignBottomWithPanel="True" Foreground="MediumPurple"                         >
                    <SymbolIcon Symbol="Send"/>
                </Button>
            </RelativePanel>
            
        </Grid>
        <Grid RenderTransformOrigin="10.738,0.678" Margin="0,6,258,-6" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True">

            <RelativePanel Margin="58,0,10,859">
                <Button x:ConnectionId='4' x:Name="BackButton" HorizontalAlignment="Left" Margin="-55,0,0,-66" Width="42" Height="66" FontFamily="Segoe MDL2 Assets" Background="#00000000" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignLeftWithPanel="True" FontSize="18"                         >
                    <SymbolIcon Symbol="Back"/>
                </Button>
                <TextBlock x:ConnectionId='5' x:Name="Header" 
            		Text="DeskX Session"
            		VerticalAlignment="Center"
            		Style="{ThemeResource HeaderTextBlockStyle}" 
            		Margin="-1,3,-369.6,-64" RelativePanel.AlignVerticalCenterWithPanel="True" FontWeight="Normal" HorizontalAlignment="Right" Width="541" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignLeftWithPanel="True" />
                <TextBlock Text="Pen:"
            		Style="{StaticResource SubheaderTextBlockStyle}"
            		VerticalAlignment="Center"
            		Margin="517.8,11,80.6,-49" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignRightWithPanel="True" Height="38"/>
                <ComboBox x:ConnectionId='6' x:Name="PenColor"
            		VerticalAlignment="Bottom"
            		SelectedIndex="0"
            		HorizontalAlignment="Right"
            		                                     Margin="-76.333,0,-2.667,-55" Height="38" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignRightWithPanel="True">
                    <ComboBoxItem Content="Black"/>
                    <ComboBoxItem Content="Red"/>
                    <ComboBoxItem Content="Blue"/>
                    <ComboBoxItem Content="Green"/>
                    <ComboBoxItem Content="Yellow"/>
                </ComboBox>
                
            </RelativePanel>

        </Grid>
    </RelativePanel>
</Page>

